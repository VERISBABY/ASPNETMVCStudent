@model IEnumerable<StudentsApp.tblStudent>

@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No students found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().StudentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().EnrollmentDate)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentID</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @(
                        item.EnrollmentDate == null
                        ? String.Empty
                        : item.EnrollmentDate.ToString("yyyy-MM-dd")
                    )
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-sm btn-outline-info" })
                        |
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btn btn-sm btn-outline-primary" })
                        |
                        @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-sm btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
